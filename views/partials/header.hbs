            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul id="top-menu" class="nav navbar-nav navbar-right main-nav">
                    <li><a href="/">Trang chủ</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Khoá học <span
                                class="fa fa-angle-down"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <style>
                                .sub-menu-2 {
                                    display: none;
                                    margin-left: 30rem;
                                }

                                .hover-me:hover .sub-menu-2 {
                                    position: absolute;
                                    display: block;
                                    margin-top: -44px;
                                }
                            </style>
                            <li><a href="list-courses">Tất cả</a></li>
                            {{#each session.category}}
                            <li class="hover-me"><a href="#">{{name}}</a>
                                <div class="sub-menu-2" role="menu">
                                    {{#if categories.length}}
                                    <ul class="dropdown-menu">
                                        {{#each categories}}
                                        <li><a href="list-courses?category={{name}}">{{name}}</a></li>
                                        {{/each}}
                                    </ul>
                                    {{else}}
                                    {{/if}}
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    {{#if session.userSession}}
                    {{#if (eq session.userSession.role 1)}}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tài khoản <span
                                class="fa fa-angle-down"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/profile">Thông tin cá nhân</a></li>
                            <li><a href="/manage-courses">Quản lý khoá học</a></li>
                            <li><a href='/logout'>Đăng xuất</a></li>
                        </ul>
                    </li>
                    {{else}}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tài khoản <span
                                class="fa fa-angle-down"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/profile">Thông tin cá nhân</a></li>
                            <li><a href="/blog-single.html">Danh sách yêu thích</a></li>
                            <li><a href="/enrolled-courses">Khoá học của tôi</a></li>
                            <li><a href='/logout'>Đăng xuất</a></li>
                        </ul>
                    </li>
                    {{/if}}
                    {{else}}
                    <li><a href="/login">Đăng nhập</a></li>
                    {{/if}}
                    <li><a data-toggle="modal" data-target="#exampleModal"><i class="fa fa-search"></i></a></li>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Tìm kiếm</h5>
                                </div>
                                <div class="modal-body">
                                    <form id="acount-infor" action="/search-course" class="acount-infor" method="get">
