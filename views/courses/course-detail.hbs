<!-- Page breadcrumb -->
<section id="mu-page-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-page-breadcrumb-area">
                    <h2>Chi tiết khoá học</h2>
                    <ol class="breadcrumb">
                        <li><a href="/">Trang chủ</a></li>
                        <li class="active">Chi tiết khoá học</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End breadcrumb -->
<section id="mu-course-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-course-content-area">
                    <div class="row">
                        <div class="col-md-9">
                            <!-- start course content container -->
                            <div class="mu-course-container mu-course-details">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mu-latest-course-single">
                                            <figure class="mu-latest-course-img">
                                                <a href="#"><img src="{{course.image}}" alt="img"></a>
                                                <figcaption class="mu-latest-course-imgcaption">
                                                    <a href="#">{{course.categoryChildName}}</a>
                                                </figcaption>
                                            </figure>
                                            <div class="mu-latest-course-single-content">
                                                <h2><a href="#">{{course.name}}</a></h2>
                                                <h4>Thông tin khoá học</h4>
                                                <ul>
                                                    <li> <span>Mô tả ngắn gọn</span> <span>{{course.description}}</span>
                                                    </li>
                                                    <li> <span>Học phí</span> <span>{{course.price}}</span></li>
                                                    <li> <span>Học viên đăng ký </span> <span>
                                                            {{course.subscribers.length}}</span></li>
                                                    <li> <span>Điểm đánh giá </span> <span>{{point}}</span></li>
                                                    <li> <span>Học viên đánh giá</span> <span>{{num}}</span></li>
                                                </ul>

                                                <h4>Mô tả chi tiết</h4>
                                                <p>{{course.detail}}</p>

                                                <h4>Thông tin giáo viên</h4>
                                                <ul>
                                                    <li> <span>Họ và tên</span> <span>{{course.name_owner}}</span>
                                                    </li>
                                                    <li> <span>Email</span> <span>{{course.email_owner}}</span></li>
                                                </ul>
                                                <h4>Đề cương môn học</h4>
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th> Tiêu đề </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {{#if (eq req.session.userSession course._id)}}
                                                            {{#each course.videos}}
                                                            <tr onclick="window.location='/course-video'">
                                                                <td> {{lookup ../num_order @index}}. {{title}} </td>
                                                            </tr>
                                                            {{/each}}
                                                            {{else}}
                                                            {{#each course.videos}}
                                                            {{#if (eq isPreviewed true)}}
                                                            <tr onclick="window.location='/course-video'">
                                                                <td> {{lookup ../num_order @index}}. {{title}} </td>
                                                            </tr>
                                                            {{else}}
                                                            <tr>
                                                                <td> {{lookup ../num_order @index}}. {{title}} </td>
                                                            </tr>
                                                            {{/if}}
                                                            {{/each}}
                                                            {{/if}}

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end course content container -->

                            <!-- start blog comment -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mu-comments-area">
                                        <h3>{{num}} Comments</h3>
                                        <div class="comments">
                                            <ul class="commentlist">
                                                {{#each course.subscribers}}
                                                {{#if (eq comment "")}}
                                                {{else}}
                                                <li>
                                                    <div class="media">
                                                        <div class="media-body">
                                                            <h4 class="author-name">{{name_sub}}</h4>
                                                            <span class="comments-date">{{point}}</span>
                                                            <p>{{comment}}</p>
                                                        </div>
                                                    </div>
                                                </li>
                                                {{/if}}
                                                {{/each}}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end blog comment -->
                        </div>
                        <div class="col-md-3">
                            <!-- start sidebar -->
                            <aside class="mu-sidebar">
                                <!-- start single sidebar -->
                                <div class="mu-single-sidebar" style="text-align: center;">
                                    <h4 style="color: #01bafd;">Học 365 ngày chỉ với</h4>
                                    <h3 style="color: #ff7e00;">{{course.price}}</h3>
                                    <button class="btn btn-primary"
                                        style="background-color: #ff7e00; border-color:#ff7e00">Đăng ký ngay</button>
                                </div>
                                <!-- end single sidebar -->
                                <!-- start single sidebar -->
                                <div class="mu-single-sidebar">
                                    <h3>Khoá học liên quan</h3>
                                    <div class="mu-sidebar-popular-courses">
                                        {{#each course_popular}}
                                        <div class="media">
                                            <div class="media-left">
                                                <a href="#">
                                                    <img class="media-object" src="{{image}}" alt="img">
                                                </a>
                                            </div>
                                            <div class="media-body">
                                                <h4 class="media-heading"><a href="#">{{name}}</a></h4>
                                                <span class="popular-course-price">{{price}}</span>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                                <!-- end single sidebar -->
                            </aside>
                            <!-- / end sidebar -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>